<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/card"
    android:orientation="vertical">

    <TextView
        android:id="@+id/invoice_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/border"
        android:padding="5dp"
        android:text="تم تسجيل الفاتوره "
        android:textColor="#292929"
        android:textSize="16dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:padding="5dp"
            android:src="@drawable/ic_cancel_black_24dp"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:padding="5dp"
            android:src="@drawable/ic_share_black_24dp"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/print"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:padding="5dp"
            android:src="@drawable/printerconnected" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_invoice"
            android:background="@color/white"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />
            <TextView
                android:id="@+id/shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:textStyle="normal"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:background="@drawable/border"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="  فاتورة رقم "
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:textStyle="normal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/border"
                    android:textSize="10dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text=" العميل "
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:textStyle="normal"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cashier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:background="@drawable/border"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text=" الكاشير "
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:textStyle="normal"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="الاجمالي"
                    android:textColor="#000000"
                    android:textSize="8dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="الكمية"
                    android:textColor="#000000"
                    android:textSize="8dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="السعر"
                    android:textColor="#000000"
                    android:textSize="8dp"
                    android:layout_marginStart="2dp"
                    android:textStyle="bold"

                   />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="اسم المنتج"
                    android:textColor="#000000"
                    android:padding="2dp"
                    android:textSize="8dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="#"
                    android:textColor="#000000"
                    android:textSize="11dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TableLayout
                android:id="@+id/table"
                android:layout_width="175dp"
                android:layout_height="wrap_content"

                >

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/afterdiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/border"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" بعد الخصم "
                    android:textColor="#000000"
                    android:textSize="8dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/total_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/border"
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" الاجمالي "
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <View
                    android:layout_width="4dp"
                    android:layout_height="0dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/paid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/border"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" مدفوع "
                    android:textColor="#000000"
                    android:textSize="8dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/pay_kind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/border"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" نوع الدفع "
                    android:textColor="#000000"
                    android:textSize="8dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notpaidlinear"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/pre_not_paid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:textColor="#000000"
                        android:textSize="9dp"
                        android:background="@drawable/border"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="المديونيه السابقة"
                        android:textColor="#000000"
                        android:textSize="8dp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="4dp"
                        android:layout_height="0dp" />
                    <TextView
                        android:id="@+id/not_paid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:background="@drawable/border"
                        android:textColor="#000000"
                        android:textSize="9dp"
                        android:textStyle="normal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" باقي "
                        android:textColor="#000000"
                        android:textSize="9dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <View
                        android:layout_width="4dp"
                        android:layout_height="0dp" />



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/total_not"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/total_not_paid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/border"
                        android:textSize="10dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text=" اجمالي المديونيه"
                        android:textColor="#000000"
                        android:textSize="8dp"
                        android:textStyle="bold"/>

                </LinearLayout>


            </LinearLayout>




 <LinearLayout
                android:id="@+id/delivery_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="9dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text=" خدمة التوصيل "
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:textStyle="normal"/>

            </LinearLayout>

            <TextView
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:background="@drawable/border"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/address_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginBottom="35dp"
                android:textSize="10dp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:visibility="gone"
                android:textSize="7dp"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>